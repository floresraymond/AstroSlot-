    <nav>

        <ul>
            {
                navData.map( (item) => (
                    <>
                <li>
                    <a href={item.href}> {item.text} </a> 
                </li>
                
                <span class="divider">{item.divider}</span>
                </>
                
                ))
            }

        </ul>

    </nav>







    <style>
        ul {
        list-style-type: none;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: rgb(255, 255, 255);
        padding: 1rem;
        }
        li {
        padding: 0 0.5rem;
        background-color: none;
        }
        span.divider{
            display: none;
        }

            @media screen and (min-width: 600px){
                ul {
                    flex-direction: row;
                }
                span.divider{ 
                    display: inline;
                }
            }
    </style>